<plugin id="com.ofe.legicplugin" version="1.0.9"
        xmlns="http://apache.org/cordova/ns/plugins"
        xmlns:android="http://schemas.android.com/apk/res/android">
		
    <name>LEGIC Plugin</name>
    <description>LEGIC Mobile SDK Cordova plugin for OutSystems</description>
    <license>MIT</license>

    <!-- JavaScript interface -->
    <js-module src="www/legic.js" name="Legic">
        <clobbers target="Legic"/>
    </js-module>

    <!-- ANDROID -->
	<platform name="android">
		<!-- Java source -->
		<source-file src="src/android/com/ofe/legic/LegicPlugin.java"
					 target-dir="src/com/ofe/legic" />

		<!-- Copy the AAR into app/libs -->
		<resource-file src="src/android/libs/legicmobilesdk-release.aar"
					   target="app/libs/legicmobilesdk-release.aar" />

		<!-- Tell Gradle to link the AAR -->
		<framework src="app/libs/legicmobilesdk-release.aar"
				   custom="true" type="aar" />
	</platform>

    <!-- iOS -->
    <platform name="ios">
        <config-file target="config.xml" parent="/*">
            <feature name="LegicPlugin">
                <param name="ios-package" value="LegicPlugin"/>
            </feature>
        </config-file>

        <header-file src="src/ios/LegicPlugin.h" />
        <source-file src="src/ios/LegicPlugin.m" />
    </platform>

</plugin>
