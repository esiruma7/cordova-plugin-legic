<plugin id="com.ofe.legicplugin" version="1.0.9"
        xmlns="http://apache.org/cordova/ns/plugins"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <name>LEGIC Plugin</name>
    <description>LEGIC Mobile SDK Cordova plugin (Android only)</description>

    <!-- JS bridge -->
    <js-module src="www/legic.js" name="Legic">
        <clobbers target="Legic"/>
    </js-module>

    <!-- Android -->
	<platform name="android">
		<source-file src="src/android/com/ofe/legic/LegicPlugin.java"
					 target-dir="src/com/ofe/legic" />

		<!-- Copy AAR into app/libs -->
		<source-file src="src/android/libs/legicmobilesdk-release.aar"
					 target-dir="app/libs" />

		<!-- Ensure Gradle links against it -->
		<framework src="app/libs/legicmobilesdk-release.aar"
				   custom="true"
				   type="aar" />
	</platform>

</plugin>
