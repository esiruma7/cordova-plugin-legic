<?xml version="1.0" encoding="UTF-8"?>
<plugin id="com.ofe.legicplugin"
        version="1.0.0"
        xmlns="http://apache.org/cordova/ns/plugins"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <name>LEGIC Plugin</name>
    <description>Cordova plugin wrapper for LEGIC Mobile SDK</description>
    <license>Apache 2.0</license>
    <keywords>cordova, legic, sdk</keywords>

    <!-- JavaScript interface -->
    <js-module src="www/legic.js" name="Legic">
        <clobbers target="Legic" />
    </js-module>

    <!-- Android platform -->
    <platform name="android">
        <!-- Your Cordova bridge -->
        <source-file src="src/android/LegicPlugin.java"
                     target-dir="src/com/ofe/legicplugin" />

        <!-- Reference the AAR -->
        <framework src="src/android/legicmobilesdk-release.aar"
                   custom="true" />

        <!-- Ensure Gradle knows about AAR dependencies -->
        <config-file target="AndroidManifest.xml" parent="/manifest/application">
            <meta-data android:name="com.ofe.legicplugin" android:value="enabled" />
        </config-file>
    </platform>
		
    <!-- iOS -->
	<platform name="ios">
		<source-file src="src/ios/LegicPlugin.swift" target-dir="src/ios"/>
		<!--<framework src="src/ios/LegicMobileSdk.xcframework" custom="true"/>
		<config-file target="config.xml" parent="/*">
			<feature name="LegicPlugin">
				<param name="ios-package" value="LegicPlugin"/>
			</feature>
		</config-file>-->
		<preference name="SwiftVersion" value="5.0"/>
	</platform>

</plugin>
