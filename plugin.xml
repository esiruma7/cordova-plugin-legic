<?xml version="1.0" encoding="UTF-8"?>
<plugin id="com.ofe.legicplugin" version="1.0.0"
        xmlns="http://apache.org/cordova/ns/plugins"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <name>LEGIC Plugin</name>
    <description>LEGIC Mobile SDK Cordova plugin for OutSystems</description>
    <license>MIT</license>

    <!-- JavaScript interface -->
    <js-module src="www/legic.js" name="Legic">
        <clobbers target="Legic"/>
    </js-module>

    <!-- ANDROID -->
	<platform name="android">
	  <source-file src="src/android/com/ofe/legic/LegicPlugin.java"
				   target-dir="src/com/ofe/legic"/>

	  <!-- This is the key: include the JAR properly -->
	  <framework src="src/android/libs/LEGIC-Mobile-SDK-for-Android-V3.1.2.0.jar" custom="true"/>

	  <config-file target="res/xml/config.xml" parent="/*">
		<feature name="LegicPlugin">
		  <param name="android-package" value="com.ofe.legic.LegicPlugin"/>
		</feature>
	  </config-file>
	</platform>

    <!-- iOS -->
	<platform name="ios">
		<source-file src="src/ios/LegicPlugin.swift" target-dir="src/ios"/>
		<framework src="src/ios/LegicMobileSdk.xcframework" custom="true"/>
		<config-file target="config.xml" parent="/*">
			<feature name="LegicPlugin">
				<param name="ios-package" value="LegicPlugin"/>
			</feature>
		</config-file>
		<preference name="SwiftVersion" value="5.0"/>
	</platform>

</plugin>
