<plugin id="com.ofe.legicplugin" version="1.0.8"
        xmlns="http://apache.org/cordova/ns/plugins"
        xmlns:android="http://schemas.android.com/apk/res/android">
		
    <name>LEGIC Plugin</name>
    <description>LEGIC Mobile SDK Cordova plugin for OutSystems</description>
    <license>MIT</license>

    <!-- JavaScript interface -->
    <js-module src="www/legic.js" name="Legic">
        <clobbers target="Legic"/>
    </js-module>

    <!-- ANDROID -->
	<platform name="android">
		<source-file src="src/android/com/ofe/legic/LegicPlugin.java"
					 target-dir="src/com/ofe/legic"/>
		<framework src="src/android/libs/legicmobilesdk-release.aar"
				   custom="true" type="aar"/>
	</platform>

    <!-- iOS -->
	<platform name="android">
		<framework src="src/android/libs/legicmobilesdk-release.aar" custom="true" type="aar"/>
		<source-file src="src/android/com/ofe/legic/LegicPlugin.java"
					 target-dir="src/com/ofe/legic"/>
		<config-file target="res/xml/config.xml" parent="/*">
			<feature name="LegicPlugin">
				<param name="android-package" value="com.ofe.legic.LegicPlugin"/>
			</feature>
		</config-file>
	</platform>

</plugin>
